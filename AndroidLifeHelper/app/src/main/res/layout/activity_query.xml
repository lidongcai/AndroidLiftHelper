<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.moliying.androidlifehelper.activity.QueryActivity">

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="#3D98D1"
        />
    <LinearLayout
        android:id="@+id/query_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/textview"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="消费项目"
            android:textSize="16sp"
            android:padding="10dp"
            android:gravity="center"/>
        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#ff0000"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="金额"
            android:textSize="16sp"
            android:padding="10dp"
            android:gravity="center"/>
        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#ff0000"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="消费者"
            android:textSize="16sp"
            android:padding="10dp"
            android:gravity="center"/>
        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#ff0000"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="时间"
            android:textSize="16sp"
            android:padding="10dp"
            android:gravity="center"/>
    </LinearLayout>

    <View
        android:id="@+id/query_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff0000"
        android:layout_below="@id/query_linear_layout"
        />

<android.support.v7.widget.RecyclerView
    android:id="@+id/recyclerview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/query_view"
    >

</android.support.v7.widget.RecyclerView>

</RelativeLayout>
